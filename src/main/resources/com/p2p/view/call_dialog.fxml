<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #2c2c2c; -fx-padding: 30;">
   <children>
      <Label fx:id="callerNameLabel" text="Call" textFill="WHITE">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      
      <Label fx:id="callStatusLabel" text="Status" textFill="#cccccc">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      
      <HBox alignment="CENTER" spacing="20">
         <children>
            <Button fx:id="acceptButton" onAction="#acceptCall" 
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 20; -fx-background-radius: 5;"
                    text="Accept" />
            
            <Button fx:id="rejectButton" onAction="#rejectCall"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 20; -fx-background-radius: 5;"
                    text="Reject" />
            
            <Button fx:id="endCallButton" onAction="#endCall"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 20; -fx-background-radius: 5;"
                    text="End Call" />
         </children>
      </HBox>
   </children>
</VBox>



